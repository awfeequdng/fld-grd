{
  "name": "fld-grd",
  "version": "1.0.0",
  "description": "Responsive Google Images inspired fluid grid layouts",
  "main": "dist/fld-grd.js",
  "jsnext:main": "src/fld-grd.js",
  "files": [
    "src/fld-grd.js",
    "dist/fld-grd.min.js"
  ],
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.0",
    "eslint-plugin-import": "^1.7.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.0.1",
    "onchange": "^2.4.0",
    "uglify-js": "^2.6.2"
  },
  "scripts": {
    "lint": "eslint src",
    "uglify": "uglifyjs dist/fld-grd.js -m -o dist/fld-grd.min.js",
    "babel": "babel src --out-dir dist",
    "build": "npm run lint && npm run babel && npm run uglify",
    "watch": "onchange 'src/*.js' -- npm run build -s"
  },
  "keywords": [
    "responsive",
    "fluid",
    "flex",
    "grid"
  ],
  "author": "Markus Bianchi",
  "license": {
    "type": "MIT",
    "url": "https://github.com/mrksbnch/fld-grd/blob/master/LICENSE.md"
  },
  "repository": "https://github.com/mrksbnch/fld-grd.git",
  "bugs": "https://github.com/mrksbnch/fld-grd/issues",
  "homepage": "https://github.com/mrksbnch/fld-grd"
}
